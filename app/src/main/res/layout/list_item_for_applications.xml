<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_thumb"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/boncegro_font"
                    android:lines="2"
                    android:textColor="@color/general_purple"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/EditApplicationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/edit_icon" />

                <ImageButton
                    android:id="@+id/DeleteApplicationButton"
                    android:layout_width="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_delete"
                    android:layout_height="match_parent"

                    />

            </LinearLayout>

            <TextView
                android:id="@+id/item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/laptev_font"
                android:lines="6"
                android:textColor="@color/general_blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date_of_receiving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата подачи:" />

            <TextView
                android:id="@+id/date_of_perfoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата исполнения:" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>